@model SalesWebMvc.Models.Vendedor

@{
    ViewData["Title"] = "Incluir";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Incluir">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataAniversario" class="control-label"></label>
                <input asp-for="DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>


